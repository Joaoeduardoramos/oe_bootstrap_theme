{#
/**
 * @file
 * Override for core 'pager' template, using the 'navigation' pattern.
 */
#}
{% block pager %}
{% if items %}
  {{ pattern('pagination', {
    'alignment': 'center',
    'first': items.first ? {
      'label': items.first.text|default('First'|t),
      'path': items.first.href,
      'attributes': items.first.attributes.setAttribute('aria-label', 'First'|t),
    },
    'prev': items.previous ? {
      'label': items.previous.text|default('Previous'|t),
      'path': items.previous.href,
      'attributes': items.previous.attributes.setAttribute('aria-label', 'Previous'|t),
    },
    'items': items.pages|map((item, key) => {
      'label': key,
      'path': item.href,
      'active': key == current,
      'attributes': item.attributes.setAttribute('aria-label', key),
    }),
    'next': items.next ? {
      'label': items.next.text|default('Next'|t),
      'path': items.next.href,
      'attributes': items.next.attributes.setAttribute('aria-label', 'Next'|t),
    },
    'last': items.last ? {
      'label': items.last.text|default('Last'|t),
      'path': items.last.href,
      'attributes': items.last.attributes.setAttribute('aria-label', 'Last'|t),
    },
  }) }}
{% endif %}
{% endblock %}
