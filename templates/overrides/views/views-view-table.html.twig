{#
/**
 * @file
 * Template override that applies Bootstrap classes to views table.
 *
 * Available variables:
 * - all the variables from @views/views-view-table.html.twig.
 *
 * @see template_preprocess_table()
 * @see oe_bootstrap_theme_preprocess_views_view_table()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    bootstrap_table ? 'table',
    bootstrap_table.responsive,
  ]
%}
{% set attributes = attributes.addClass(classes) %}
{% extends "@views/views-view-table.html.twig" %}
